# -------- Datadog (required) --------
DATADOG_API_KEY=replace_me
DD_SITE=datadoghq.eu
DD_ENV=dev
DD_VERSION=0.1.0

# RUM (required for browser + session replay)
# Create a RUM application in Datadog and enable Session Replay, then use the generated tokens.
DD_RUM_APPLICATION_ID=replace_me
DD_RUM_CLIENT_TOKEN=replace_me
DD_RUM_SITE=datadoghq.eu
DD_RUM_SERVICE=web-frontend
DD_RUM_ENV=dev
DD_RUM_VERSION=0.1.0
# 0-100, percentage of sessions to record/replay
DD_RUM_SESSION_REPLAY_SAMPLE_RATE=100

# -------- Jira (required for fraud tickets) --------
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=you@example.com
JIRA_API_TOKEN=replace_me
JIRA_PROJECT_KEY=PER
JIRA_ISSUE_TYPE=Task

# -------- App tuning (optional) --------
PAYMENT_FAIL_RATE=0.15
PAYMENT_SUSPECTED_FRAUD_RATE=0.05

AUTH_FAIL_RATE=0.12
FRAUD_CONFIRM_RATE=0.35
JIRA_POLL_INTERVAL_SECONDS=1800

# -------- Kind --------
KIND_CLUSTER_NAME=dd-payments-kind
